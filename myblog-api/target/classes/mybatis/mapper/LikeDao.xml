<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.entity.dao.LikeDao">

    <resultMap id="BaseResultMap" type="com.test.entity.entity.Like">
        <!--@Table like-->
        <result property="likeId" column="like_id" jdbcType="INTEGER"/>
        <result property="likeBlog" column="like_blog" jdbcType="INTEGER"/>
        <result property="likeUsername" column="like_username" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          like_id, like_blog, like_username
        from myblog.like
        where like_id = #{likeId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          like_id, like_blog, like_username
        from myblog.like
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAllByItem" resultMap="BaseResultMap">
        select
          like_id, like_blog, like_username
        from myblog.like
        <where>
            <if test="likeId != null">
                and like_id = #{likeId}
            </if>
            <if test="likeBlog != null">
                and like_blog = #{likeBlog}
            </if>
            <if test="likeUsername != null">
                and like_username = #{likeUsername}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="likeId" useGeneratedKeys="true">
        insert into myblog.like(like_blog, like_username)
        values (#{likeBlog}, #{likeUsername})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update myblog.like
        <set>
            <if test="likeBlog != null">
                like_blog = #{likeBlog},
            </if>
            <if test="likeUsername != null">
                like_username = #{likeUsername},
            </if>
        </set>
        where like_id = #{likeId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from myblog.like where like_id = #{likeId}
    </delete>
     <!--查询所有like-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
        like_id, like_blog, like_username        from like
    </select>
</mapper>