<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.test.dao.KindDao">

    <resultMap id="BaseResultMap" type="com.test.entity.Kind">
        <!--@Table kind-->
        <result property="kindId" column="kind_id" jdbcType="INTEGER"/>
        <result property="kindName" column="kind_name" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          kind_id, kind_name
        from myblog.kind
        where kind_id = #{kindId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          kind_id, kind_name
        from myblog.kind
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAllByItem" resultMap="BaseResultMap">
        select
          kind_id, kind_name
        from myblog.kind
        <where>
            <if test="kindId != null">
                and kind_id = #{kindId}
            </if>
            <if test="kindName != null and kindName != ''">
                and kind_name = #{kindName}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="kindId" useGeneratedKeys="true">
        insert into myblog.kind(kind_name)
        values (#{kindName})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update myblog.kind
        <set>
            <if test="kindName != null and kindName != ''">
                kind_name = #{kindName},
            </if>
        </set>
        where kind_id = #{kindId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from myblog.kind where kind_id = #{kindId}
    </delete>
     <!--查询所有kind-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
        kind_id, kind_name        from kind
    </select>
</mapper>